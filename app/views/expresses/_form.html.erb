<%= form_for @express, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :express_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :express_no, :class => 'text_field', disabled: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_province, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_province, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_district, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_district, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_addr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_addr, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_name, :class => 'text_field', disabled: true %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label :receiver_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :receiver_phone, :class => 'text_field', disabled: true %>
    </div>
  </div>
  
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :change_express_addr, Express %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              change_express_addr_expresses_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
